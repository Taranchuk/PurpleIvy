<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--====== Replacements&Custom C# Fire-Cold ======-->

  <ThoughtDef>
    <defName>RacedDeathNonAlly</defName>
    <icon>Things/Mote/ThoughtSymbols/DeathRace</icon>
    <showBubble>true</showBubble>
    <durationDays>1</durationDays>
    <stackLimit>1</stackLimit>
    <nullifyingTraits>
      <li>Psychopath</li>
      <li>Bloodlust</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>I saw someone die</label>
        <description>Even death is not to be feared by one who has lived wisely.</description>
        <baseMoodEffect>-3</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>RaceDeathAlly</defName>
    <icon>Things/Mote/ThoughtSymbols/DeathRace</icon>
    <showBubble>true</showBubble>
    <durationDays>2</durationDays>
    <stackLimit>5</stackLimit>
    <nullifyingTraits>
      <li>Psychopath</li>
      <li>Bloodlust</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>Witnessed someone Death</label>
        <description>Death is the only way to stop the pain..</description>
        <baseMoodEffect>-2</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>RaceWorkerObservedLayingCorpse</defName>
    <icon>Things/Mote/ThoughtSymbols/DeathRace</icon>
    <showBubble>true</showBubble>
    <thoughtClass>Thought_MemoryObservation</thoughtClass>
    <durationDays>0.5</durationDays>
    <stackedEffectMultiplier>0.5</stackedEffectMultiplier>
    <stackLimit>3</stackLimit>
    <nullifyingTraits>
      <li>Psychopath</li>
      <li>Bloodlust</li>
      <li>Cannibal</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>Corpses...</label>
        <description>Death is just leaving the stage long enough to change costume and come back as a new character..</description>
        <baseMoodEffect>-4</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>


  <ThoughtDef>
    <defName>RaceWorkerObservedLayingRottingCorpse</defName>
    <icon>Things/Mote/ThoughtSymbols/DeathRace</icon>
    <showBubble>true</showBubble>
    <thoughtClass>Thought_MemoryObservation</thoughtClass>
    <durationDays>0.5</durationDays>
    <stackedEffectMultiplier>0.5</stackedEffectMultiplier>
    <stackLimit>5</stackLimit>
    <nullifyingTraits>
      <li>Bloodlust</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>Rotting corpses..</label>
        <description>Life is stressful, dear. That’s why they say “Rest In Peace”.</description>
        <baseMoodEffect>-5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>RaceDeathFamily</defName>
    <icon>Things/Mote/ThoughtSymbols/DeathRace</icon>
    <showBubble>true</showBubble>
    <durationDays>6</durationDays>
    <stackLimit>1</stackLimit>
    <nullifyingTraits>
      <li>Psychopath</li>
      <li>Bloodlust</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>Witnessed family dying</label>
        <description>Our dead are never dead to us, until we have forgotten them.</description>
        <baseMoodEffect>-3</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>RaceDeathBloodlust</defName>
    <icon>Things/Mote/ThoughtSymbols/DeathRace</icon>
    <showBubble>true</showBubble>
    <durationDays>4</durationDays>
    <stackLimit>5</stackLimit>
    <requiredTraits>
      <li>Bloodlust</li>
    </requiredTraits>
    <stages>
      <li>
        <label>Witnessed Death..</label>
        <description>“Killing people is easier than it should be.”....Staying alive is harder.</description>
        <baseMoodEffect>12</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

</Defs>