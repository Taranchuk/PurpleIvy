<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="SkyfallerBase">
    <defName>PI_MeteorIncoming</defName>
    <label>meteorite (incoming)</label>
	<thingClass>PurpleIvy.MeteorIncoming</thingClass>
    <tickerType>Normal</tickerType>
    <category>Ethereal</category>
    <size>(2, 2)</size>
    <graphicData>
	  <texPath>Things/Meteor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <shaderType>CutoutFlying</shaderType>
      <drawSize>(10, 10)</drawSize>
    </graphicData>
    <skyfaller>
      <shadowSize>(3, 3)</shadowSize>
      <rotateGraphicTowardsDirection>true</rotateGraphicTowardsDirection>
      <speed>1.2</speed>
    </skyfaller>
  </ThingDef>
  
  <ThingDef ParentName="BuildingBase">
    <defName>PI_Meteorite</defName>
    <label>Meteorite</label>
    <thingClass>PurpleIvy.Building_Meteorite</thingClass>
    <tickerType>Normal</tickerType>
	<graphicData>
		<texPath>Things/Meteor</texPath>
		<graphicClass>Graphic_Single</graphicClass>
		<shadowData>
			<volume>(0.8, 0.8, 0.6)</volume>
			<offset>(0,0,-0.1)</offset>
		</shadowData>
	</graphicData>
    <passability>Impassable</passability>
    <altitudeLayer>Building</altitudeLayer>
    <useHitPoints>true</useHitPoints>
    <building>
      <ai_combatDangerous>true</ai_combatDangerous>
    </building>
    <selectable>false</selectable>
    <statBases>
      <MaxHitPoints>500</MaxHitPoints>
      <Flammability>5.0</Flammability>
      <Beauty>-30</Beauty>     
    </statBases>
    <killedLeavings>
      <Steel>300</Steel>
    </killedLeavings>
  </ThingDef>
  
  <ThingDef ParentName="BuildingBase">
    <defName>EggSac</defName>
    <label>Egg Sac</label>
    <thingClass>PurpleIvy.Building_EggSac</thingClass>
    <tickerType>Rare</tickerType>
	<graphicData>
		<texPath>Things/EggSac</texPath>
		<graphicClass>Graphic_Single</graphicClass>
		<shadowData>
			<volume>(0.3, 0.3, 0.3)</volume>
			<offset>(0,0,-0.1)</offset>
		</shadowData>
	</graphicData>
    <passability>Impassable</passability>
    <altitudeLayer>Terrain</altitudeLayer>
    <useHitPoints>true</useHitPoints>
    <building>
      <ai_combatDangerous>true</ai_combatDangerous>
    </building>
    <selectable>false</selectable>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <Flammability>3.0</Flammability>
      <Beauty>-50</Beauty>     
    </statBases>
  </ThingDef>
  
  <ThingDef ParentName="BuildingBase">
    <defName>GasPump</defName>
    <label>Gaseous Pustule</label>
    <thingClass>PurpleIvy.Building_GasPump</thingClass>
    <tickerType>Rare</tickerType>
	<graphicData>
		<texPath>Things/GasPump</texPath>
		<graphicClass>Graphic_Single</graphicClass>
		<shadowData>
			<volume>(0.3, 0.3, 0.3)</volume>
			<offset>(0,0,-0.1)</offset>
		</shadowData>
	</graphicData>
    <passability>Impassable</passability>
    <altitudeLayer>Terrain</altitudeLayer>
    <useHitPoints>true</useHitPoints>
	<building>
		<ai_combatDangerous>true</ai_combatDangerous>
	</building>
    <selectable>false</selectable>
    <comps>
			<li Class="CompProperties_Glower">
				<compClass>CompGlowerX</compClass>
				<glowRadius>3</glowRadius>
				<glowColor>(150,255,255,0)</glowColor>
			</li>
		</comps>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <Flammability>3.0</Flammability>
      <Beauty>-50</Beauty>     
    </statBases>
  </ThingDef>
  
</Defs>