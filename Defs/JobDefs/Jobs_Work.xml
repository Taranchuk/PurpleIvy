<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!--============= Item hauling ===============-->

	<JobDef>
		<defName>PI_Kill</defName>
		<driverClass>PurpleIvy.JobDriver_Kill</driverClass>
		<reportString>killing TargetA.</reportString>
		<suspendable>false</suspendable>
		<allowOpportunisticPrefix>true</allowOpportunisticPrefix>
	</JobDef>

	<JobDef>
		<defName>PI_AttackMelee</defName>
		<driverClass>PurpleIvy.JobDriver_AttackMeleePlus</driverClass>
		<reportString>melee attacking TargetA.</reportString>
		<alwaysShowWeapon>true</alwaysShowWeapon>
		<casualInterruptible>false</casualInterruptible>
	</JobDef>

	<JobDef>
		<defName>PI_ExtractNectar</defName>
		<driverClass>PurpleIvy.JobDriver_ExtractNectar</driverClass>
		<reportString>extracts nectar from a nest</reportString>
	</JobDef>

	<JobDef>
		<defName>PI_TakeAlienToContainmentBreach</defName>
		<driverClass>PurpleIvy.JobDriver_TakeAlienToСontainmentBreach</driverClass>
		<reportString>transfers TargetA to TargetB</reportString>
	</JobDef>

	<JobDef>
		<defName>PI_ConductResearchOnAliens</defName>
		<driverClass>PurpleIvy.JobDriver_TakeAlienToСontainmentBreach</driverClass>
		<reportString>conducts research on aliens</reportString>
	</JobDef>

	<JobDef>
		<defName>PI_DrawAlienBlood</defName>
		<driverClass>PurpleIvy.JobDriver_DrawAlienBlood</driverClass>
		<reportString>draws alien blood</reportString>
	</JobDef>

	<JobDef>
		<defName>PI_DrawKorsolianToxin</defName>
		<driverClass>PurpleIvy.JobDriver_DrawKorsolianToxin</driverClass>
		<reportString>draws korsolian toxin</reportString>
	</JobDef>

	<JobDef>
		<defName>PI_PreciseVivisection</defName>
		<driverClass>PurpleIvy.JobDriver_PreciseVivisection</driverClass>
		<reportString>conducts vivisection on alien creature</reportString>
	</JobDef>

