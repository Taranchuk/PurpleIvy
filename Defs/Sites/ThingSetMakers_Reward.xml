<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--====== Base Spawn ======-->

  <ThingSetMakerDef>
    <defName>Gen_OldOutpost</defName>
    <debugParams>
      <countRange>
        <min>5</min>
        <max>10</max>
      </countRange>
      <totalMarketValueRange>
        <min>1700</min>
        <max>3200</max>
      </totalMarketValueRange>
    </debugParams>
    <root Class="ThingSetMaker_RandomOption">
      <fixedParams>
        <qualityGenerator>Reward</qualityGenerator>
        <maxTotalMass>50</maxTotalMass>
      </fixedParams>
      <options>
        <li>
          <weight>1</weight>
          <weightIfPlayerHasNoItem>5</weightIfPlayerHasNoItem>
          <weightIfPlayerHasNoItemItem>StormPower</weightIfPlayerHasNoItemItem>
          <thingSetMaker Class="ThingSetMaker_Conditional_MinMaxTotalMarketValue">
            <minMaxTotalMarketValue>2500</minMaxTotalMarketValue>
            <thingSetMaker Class="ThingSetMaker_Conditional_ResearchFinished">
              <researchProject>MultiAnalyzer</researchProject>
              <thingSetMaker Class="ThingSetMaker_Count">
                <fixedParams>
                  <filter>
                    <thingDefs>
                      <li>StormPower</li>
                    </thingDefs>
                  </filter>
                </fixedParams>
              </thingSetMaker>
            </thingSetMaker>
          </thingSetMaker>
        </li>
        <li>
          <weight>1</weight>
          <thingSetMaker Class="ThingSetMaker_MarketValue">
            <fixedParams>
              <filter>
                <thingDefs>
                  <li>Silver</li>
                </thingDefs>
              </filter>
            </fixedParams>
          </thingSetMaker>
        </li>
        <li>
          <weight>2</weight>
          <thingSetMaker Class="ThingSetMaker_MarketValue">
            <fixedParams>
              <filter>
                <thingSetMakerTagsToAllow>
                  <li>RewardSpecial</li>
                </thingSetMakerTagsToAllow>
              </filter>
            </fixedParams>
          </thingSetMaker>
        </li>
        <li>
          <weight>1</weight>
          <thingSetMaker Class="ThingSetMaker_MarketValue">
            <fixedParams>
              <filter>
                <categories>
                  <li>ResourcesRaw</li>
                </categories>
                <thingSetMakerTagsToDisallow>
                  <li>RewardSpecial</li>
                </thingSetMakerTagsToDisallow>
                <disallowCheaperThan>6</disallowCheaperThan>
              </filter>
            </fixedParams>
          </thingSetMaker>
        </li>
        <li>
          <weight>1</weight>
          <thingSetMaker Class="ThingSetMaker_MarketValue">
            <fixedParams>
              <filter>
                <tradeTagsToAllow>
                  <li>ExoticMisc</li>
                </tradeTagsToAllow>
                <categories>
                  <li>Weapons</li>
                  <li>Apparel</li>
                  <li>BodyPartsBionic</li>
                  <li>AlienTechBionics</li>
                </categories>
                <thingDefs>
                  <li>CosmosEnergyRifle</li>
                  <li>FluxRifleBlue</li>
                  <li>FluxRifle</li>
                  <li>PhasePistolMagma</li>
                </thingDefs>
                <disallowedThingDefs>
                  <li>Apparel_SmokepopBelt</li>
                  <li>MedicineUltratech</li>
                  <li>ComponentSpacer</li>
                  <li>Hyperweave</li>
                  <li>CochlearImplant</li>
                  <li>BionicEar</li>
                  <li>AIPersonaCore</li>
                </disallowedThingDefs>
                <thingSetMakerTagsToDisallow>
                  <li>RewardSpecial</li>
                  <li>AnimalPart</li>
                </thingSetMakerTagsToDisallow>
              </filter>
            </fixedParams>
          </thingSetMaker>
        </li>
        <li>
          <weight>0.8</weight>
          <thingSetMaker Class="ThingSetMaker_MarketValue">
            <fixedParams>
              <filter>
                <thingDefs>
                  <li>ComponentSpacer</li>
                  <li>AlienHand</li>
                  <li>AlienHeart</li>
                </thingDefs>
              </filter>
            </fixedParams>
          </thingSetMaker>
        </li>
        <li>
          <weight>1</weight>
          <thingSetMaker Class="ThingSetMaker_Count">
            <fixedParams>
              <filter>
                <thingDefs>
                  <li>AlienJaw</li>
                  <li>AlienEar</li>
                  <li>AlienFoot</li>
                </thingDefs>
              </filter>
            </fixedParams>
          </thingSetMaker>
        </li>
      </options>
    </root>
  </ThingSetMakerDef>


  <!--====== Reward ======-->


  <ThingSetMakerDef>
    <defName>RewardOptions</defName>
    <root Class="ThingSetMaker_Sum">
      <options>
        <li>
          <chance>0.8</chance>
          <thingSetMaker Class="ThingSetMaker_StackCount">
            <fixedParams>
              <filter>
                <thingDefs>
                  <li>FluxMedicine</li>
                </thingDefs>
              </filter>
              <countRange>
                <min>3</min>
                <max>5</max>
              </countRange>
            </fixedParams>
          </thingSetMaker>
        </li>
        <li>
          <chance>0.4</chance>
          <thingSetMaker Class="ThingSetMaker_StackCount">
            <fixedParams>
              <filter>
                <thingDefs>
                  <li>ComponentSpacer</li>
                </thingDefs>
              </filter>
              <countRange>
                <min>3</min>
                <max>8</max>
              </countRange>
            </fixedParams>
          </thingSetMaker>
        </li>
        <li>
          <chance>0.4</chance>
          <thingSetMaker Class="ThingSetMaker_StackCount">
            <fixedParams>
              <filter>
                <thingDefs>
                  <li>AdvancedMedicalFlux</li>
                </thingDefs>
              </filter>
              <countRange>
                <min>2</min>
                <max>3</max>
              </countRange>
            </fixedParams>
          </thingSetMaker>
        </li>
        <li>
          <chance>0.6</chance>
          <thingSetMaker Class="ThingSetMaker_Count">
            <fixedParams>
              <filter>
                <categories>
                  <li>Artifacts</li>
                </categories>
              </filter>
              <countRange>
                <min>1</min>
                <max>2</max>
              </countRange>
            </fixedParams>
          </thingSetMaker>
        </li>
        <li>
          <chance>0.9</chance>
          <thingSetMaker Class="ThingSetMaker_Count">
            <fixedParams>
              <qualityGenerator>Reward</qualityGenerator>
              <filter>
                <thingDefs>
                  <li>CosmosEnergyRifle</li>
                  <li>FluxRifleBlue</li>
                  <li>FluxRifle</li>
                  <li>PhasePistolMagma</li>
                  <li>AlienStomach</li>
                  <li>AlienSpine</li>
                  <li>AlienLung</li>
                  <li>AlienLiver</li>
                  <li>AlienLeg</li>
                  <li>AlienKidney</li>
                  <li>AlienJaw</li>
                  <li>AlienBrain</li>
                  <li>AlienEar</li>
                  <li>AlienEye</li>
                  <li>AlienFoot</li>
                  <li>AlienHand</li>
                  <li>AlienHeart</li>
                </thingDefs>
                <thingSetMakerTagsToAllow>
                  <li>SingleUseWeapon</li>
                </thingSetMakerTagsToAllow>
              </filter>
            </fixedParams>
          </thingSetMaker>
        </li>
      </options>
    </root>
  </ThingSetMakerDef>

</Defs>

