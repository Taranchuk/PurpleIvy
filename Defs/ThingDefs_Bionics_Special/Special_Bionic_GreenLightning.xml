<?xml version="1.0" encoding="utf-8" ?>
<Defs>

    <!--====== Human Storm Power Green ======-->


    <ThingDef ParentName="SpecialCosmosBionics">
        <defName>GreenStormBionic</defName>
        <label>Capability-Stimulator</label>
        <description>A powerful and extremely Unstable Implant (Needs to be connected directly to the colonist Brain through the Ear to work as intended). Grants the Ability to cast a "Massive Lightning Strike" with a Huge Tile of Impact. Due to continuous Brain overload, it has an extremely dangerous impact on the colonist health and behavior. (Warning! This implant will Overheat in a Long Term use). Be careful If you try to Remove or Replace the Implant once Installed, the Colonist won't be able to cast the Ability anymore, though if you accidentally removed the Implant, you can always reinstall it again and the Capability-Stimulator will start Recharging your ability once again. (To correctly Cast the Bolt Make sure your view is Clear)</description>
        <techLevel>Archotech</techLevel>
        <graphicData>
            <texPath>Things/Prosthetics/StormSecond</texPath>
            <graphicClass>Graphic_StackCount</graphicClass>
        </graphicData>
        <thingCategories>
            <li>StimulatorsTech</li>
        </thingCategories>
        <thingSetMakerTags>
            <li>RewardSpecial</li>
        </thingSetMakerTags>
        <statBases>
            <MarketValue>5000</MarketValue>
            <Mass>3.5</Mass>
            <DeteriorationRate>0.5</DeteriorationRate>
        </statBases>
        <stackLimit>25</stackLimit>
        <pathCost>5</pathCost>
        <drawGUIOverlay>true</drawGUIOverlay>
        <uiIconForStackCount>1</uiIconForStackCount>
        <comps>
            <li Class="CompProperties_Glower">
                <glowRadius>1</glowRadius>
                <glowColor>(0, 255, 0)</glowColor>
            </li>
        </comps>
    </ThingDef>


    <RecipeDef>
        <defName>MakeGreenStormBionic</defName>
        <label>Make an Unstable Capability-Stimulator</label>
        <description>Grants an Unstable and Powerful Ability that has a huge area of impact. Be careful of the Extreme side effects on the colonist health.</description>
        <jobString>Crafting...</jobString>
        <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
        <effectWorking>AlienRecipeNormal</effectWorking>
        <soundWorking>Recipe_Machining</soundWorking>
        <workAmount>55000</workAmount>
        <unfinishedThingDef>UnfinishedPartLightningSecond</unfinishedThingDef>
        <recipeUsers>
            <li>BioLab</li>
        </recipeUsers>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>DragonGinger</li>
                    </thingDefs>
                </filter>
                <count>30</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>FuneralIvy</li>
                    </thingDefs>
                </filter>
                <count>30</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>AdvancedMedicalFlux</li>
                    </thingDefs>
                </filter>
                <count>10</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>DragonGinger</li>
                <li>FuneralIvy</li>
                <li>AdvancedMedicalFlux</li>
            </thingDefs>
        </fixedIngredientFilter>
        <products>
            <GreenStormBionic>1</GreenStormBionic>
        </products>
        <workSkill>Crafting</workSkill>
        <skillRequirements>
            <Crafting>12</Crafting>
        </skillRequirements>
        <researchPrerequisite>LightningResGreen</researchPrerequisite>
    </RecipeDef>


    <RecipeDef ParentName="EvaineQBionicParts">
        <defName>InstallGreenStormBionic</defName>
        <label>Install Capability-Stimulator</label>
        <description>Install and Extremely Unstable and Dangerous "Capability-Stimulator Brain Implant" that has a severe impact on the colonist Health.</description>
        <workerClass>Recipe_InstallArtificialBodyPart</workerClass>
        <effectWorking>AlienSurgeryGreen</effectWorking>
        <jobString>Installing Capability-Stimulator.</jobString>
        <workAmount>5400</workAmount>
        <skillRequirements>
            <Medicine>14</Medicine>
        </skillRequirements>
        <ingredients>
            <li>
                <filter>
                    <categories>
                        <li>Medicine</li>
                    </categories>
                </filter>
                <count>5</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>GreenStormBionic</li>
                    </thingDefs>
                </filter>
                <count>1</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <categories>
                <li>Medicine</li>
            </categories>
            <thingDefs>
                <li>GreenStormBionic</li>
            </thingDefs>
        </fixedIngredientFilter>
        <appliedOnFixedBodyParts>
            <li>Ear</li>
        </appliedOnFixedBodyParts>
        <addsHediff>GreenStormHediff</addsHediff>
    </RecipeDef>


    <HediffDef Name="StimulatorBionics" Abstract="True">
        <hediffClass>Hediff_AddedPart</hediffClass>
        <isBad>false</isBad>
        <defaultLabelColor>(204,102,255)</defaultLabelColor>
        <scenarioCanAdd>false</scenarioCanAdd>
        <addedPartProps>
            <betterThanNatural>true</betterThanNatural>
