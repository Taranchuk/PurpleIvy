<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="SkyfallerBase">
		<defName>PI_QueenIncoming</defName>
		<label>queen (incoming)</label>
		<thingClass>PurpleIvy.MeteorIncoming</thingClass>
		<tickerType>Normal</tickerType>
		<category>Ethereal</category>
		<size>(1, 1)</size>
		<graphicData>
			<texPath>Things/Pawn/ParasiteQueen/ParasiteQueen_north</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutFlying</shaderType>
			<drawSize>(5, 5)</drawSize>
		</graphicData>
		<skyfaller>
			<shadowSize>(3, 3)</shadowSize>
			<rotateGraphicTowardsDirection>true</rotateGraphicTowardsDirection>
			<speed>1.2</speed>
		</skyfaller>
	</ThingDef>

	<ThingDef ParentName="SkyfallerBase">
		<defName>PI_MeteorIncoming</defName>
		<label>meteorite (incoming)</label>
		<thingClass>PurpleIvy.MeteorIncoming</thingClass>
		<tickerType>Normal</tickerType>
		<category>Ethereal</category>
		<size>(1, 1)</size>
		<graphicData>
			<texPath>Things/Meteor</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutFlying</shaderType>
			<drawSize>(1, 1)</drawSize>
		</graphicData>
		<skyfaller>
			<shadowSize>(3, 3)</shadowSize>
			<rotateGraphicTowardsDirection>true</rotateGraphicTowardsDirection>
			<speed>1.2</speed>
		</skyfaller>
	</ThingDef>

	<ThingDef ParentName="BuildingBase">
		<defName>PI_Meteorite</defName>
		<label>Meteorite</label>
		<thingClass>PurpleIvy.Building_Meteorite</thingClass>
		<tickerType>Normal</tickerType>
		<graphicData>
			<texPath>Things/Meteor</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shadowData>
				<volume>(0.8, 0.8, 0.6)</volume>
				<offset>(0,0,-0.1)</offset>
			</shadowData>
		</graphicData>
		<passability>Impassable</passability>
		<altitudeLayer>Building</altitudeLayer>
		<useHitPoints>true</useHitPoints>
		<building>
			<claimable>false</claimable>
		</building>
		<selectable>true</selectable>
		<statBases>
			<ArmorRating_Blunt>10</ArmorRating_Blunt>
			<ArmorRating_Sharp>10</ArmorRating_Sharp>
			<ArmorRating_Heat>10</ArmorRating_Heat>
			<MaxHitPoints>1000</MaxHitPoints>
			<Flammability>0.0</Flammability>
			<Beauty>-30</Beauty>     
		</statBases>
		<killedLeavings>
			<Plasteel>30</Plasteel>
			<Silver>300</Silver>
			<Uranium>20</Uranium>
			<Gold>50</Gold>
			<PurpleIvy>1</PurpleIvy>
		</killedLeavings>
	</ThingDef>

</Defs>
