<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- ================== Seed mortar ================== -->
	<ThingDef ParentName="BaseBullet">
		<defName>Bullet_GenMortar</defName>
		<label>Oxalis Seed</label>
		<thingClass>PurpleIvy.Projectile_Seed</thingClass>
		<graphicData>
			<texPath>Things/Projectiles/OxalisSeed</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>TransparentPostLight</shaderType>
		</graphicData>
		<projectile>
			<damageDef>AlienToxicSpit</damageDef>
			<damageAmountBase>5</damageAmountBase>
			<speed>15</speed>
			<flyOverhead>true</flyOverhead>
			<soundExplode>MortarBomb_Explode</soundExplode>
			<soundImpactAnticipate>MortarRound_PreImpact</soundImpactAnticipate>
			<soundAmbient>MortarRound_Ambient</soundAmbient>
			<explosionRadius>1</explosionRadius>
			<postExplosionSpawnThingDef>PI_ToxicFilth</postExplosionSpawnThingDef>
			<postExplosionSpawnChance>1</postExplosionSpawnChance>
			<postExplosionSpawnThingCount>10</postExplosionSpawnThingCount>
			<soundHitThickRoof>Artillery_HitThickRoof</soundHitThickRoof>
		</projectile>
	</ThingDef>

	<ThingDef ParentName="BaseArtilleryWeapon">
		<defName>Artillery_MortarGenny</defName>
		<label>Oxalis</label>
		<description>A genetically modified Oxalis plant species, its able to fire its seeds huge distances.</description>
		<graphicData>
			<texPath>Things/GenMortarGun</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<weaponTags>
			<li>Artillery_BaseDestroyer</li>
		</weaponTags>
		
		<tradeability>None</tradeability>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<forcedMissRadius>13</forcedMissRadius>
				<forceNormalTimeSpeed>false</forceNormalTimeSpeed>
				<hasStandardCommand>true</hasStandardCommand>
				<defaultProjectile>Bullet_GenMortar</defaultProjectile>
				<warmupTime>30</warmupTime>
				<minRange>15</minRange>
				<range>500</range>
				<burstShotCount>1</burstShotCount>
				<soundCast>Mortar_LaunchA</soundCast>
				<muzzleFlashScale>16</muzzleFlashScale>
				<requireLineOfSight>false</requireLineOfSight>
				<targetParams>
					<canTargetLocations>true</canTargetLocations>
				</targetParams>
			</li>
		</verbs>
	</ThingDef>
</Defs>