<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- ================ Improvised turret gun ============== -->
	<ThingDef ParentName="BaseBullet">
		<defName>Bullet_GenTurret</defName>
		<label>Mucilage</label>
		<graphicData>
			<texPath>Things/Bullet_Slime</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile>
			<damageDef>Bullet</damageDef>
			<damageAmountBase>1</damageAmountBase>
			<speed>32</speed>
		</projectile>
	</ThingDef>

	<ThingDef ParentName="BaseWeaponTurret">
		<defName>GunTurretGun</defName>
		<label>Corchorus</label>
		<menuHidden>true</menuHidden>
		<description>A genetically modified Chorchorus plant species, its able to fire its Mucilage slime at will.</description>
		<graphicData>
			<texPath>Things/GenTurretGun</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
			<AccuracyTouch>0.70</AccuracyTouch>
			<AccuracyShort>0.64</AccuracyShort>
			<AccuracyMedium>0.41</AccuracyMedium>
			<AccuracyLong>0.22</AccuracyLong>
			<RangedWeapon_Cooldown>4.8</RangedWeapon_Cooldown>
			<DeteriorationRate>0</DeteriorationRate>
			<Mass>5</Mass>
			<Flammability>0</Flammability>
		</statBases>
		<verbs>
			<li>
				<verbClass>Verb_Shoot</verbClass>
				<defaultProjectile>Bullet_GenTurret</defaultProjectile>
				<warmupTime>0</warmupTime>
				<range>28.9</range>
				<ticksBetweenBurstShots>8</ticksBetweenBurstShots>
				<burstShotCount>1</burstShotCount>
				<soundCast>GunShotA</soundCast>
				<soundCastTail>GunTail_Light</soundCastTail>
				<muzzleFlashScale>9</muzzleFlashScale>
				<consumeFuelPerShot>1</consumeFuelPerShot>
			</li>
		</verbs>
	</ThingDef>
</Defs>